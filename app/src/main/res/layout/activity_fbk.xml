<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".FBK">
    <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent" android:orientation="vertical"
            android:focusableInTouchMode="true">
        
        <TextView
                android:text="@string/fbk_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
                android:id="@+id/textView4" android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:textAlignment="center" android:layout_marginEnd="16dp" android:layout_marginStart="16dp"
                android:padding="16dp" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
                android:textSize="30sp"/>
        <TextView
                android:text="@string/fbk_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
                android:id="@+id/textView3" android:textAlignment="center" android:textSize="16sp"
                android:layout_marginStart="8dp" android:layout_marginEnd="8dp" android:padding="16dp"
                app:layout_constraintTop_toBottomOf="@+id/textView4"/>
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine|textNoSuggestions|number"
                android:digits="0123456789,.-\n;"
                android:gravity="start|top"
                android:ems="10"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" android:id="@+id/actFBK_edtxEntrada"
                app:layout_constraintTop_toBottomOf="@+id/textView3" android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:hint="@string/fbk_example"
                android:lineSpacingExtra="4sp" android:textAlignment="textStart" android:layout_gravity="center"
                android:textSize="16sp"/>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:layout_margin="16dp">
            <Button
                    android:text="@string/fbk_bt_calcular"
                    android:layout_width="240dp"
                    android:layout_height="wrap_content" app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
                    android:id="@+id/actFBK_btCalcular"
                    app:layout_constraintTop_toBottomOf="@+id/actFBK_edtxEntrada"
                    style="@style/Widget.AppCompat.Button.Colored"
                    android:textStyle="bold" android:textSize="18sp" android:layout_gravity="center"
                    android:layout_margin="16dp"/>
            <Button
                    android:text="Exemplo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/actFBK_btExemplo"
                    style="@android:style/Widget.Holo.Button" android:textSize="14sp"
                    android:layout_marginTop="14dp"/>
        </LinearLayout>
    </LinearLayout>

</ScrollView>