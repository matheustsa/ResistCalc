<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"

        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:background="@drawable/bg__gradient_gray"
        android:fillViewport="true"
        tools:context=".Entrada">


    <ImageView
            android:id="@+id/imageView5"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/bg_city"
            style="@style/image_background" />

    <TextView
            android:id="@+id/textView1"
            style="@style/FBK_FPK_Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/open_sans_bold"
            android:text="@string/fbk_title"
            android:textAlignment="textStart"
            android:textAllCaps="false"
            android:textColor="@color/fbk_primary"
            android:textSize="32sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    <TextView
            android:id="@+id/textView2"
            style="@style/FBK_FPK_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:fontFamily="@font/open_sans_light"
            android:text="@string/act_entrada_description"
            android:textAlignment="textStart"
            android:textColor="@color/darker_gray"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView1" />

    <EditText
            android:id="@+id/actENTRY_edtxEntradas_fbk"
            style="@style/entrada_fbk_fpk_dic"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <Button
            android:id="@+id/actENTRY_btCalcular_fbk"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="200dp"
            android:layout_height="65dp"
            android:layout_marginTop="16dp"
            android:layout_weight="1"
            android:alpha="0.8"
            android:background="@drawable/square_orange"
            android:text="@string/calcular"
            android:textAllCaps="true"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.30"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/actENTRY_edtxEntradas_fbk" />

    <Button
            android:id="@+id/actENTRY_btExemplo_fbk"
            style="@style/entrada_exemplo"
            android:layout_weight="2"
            android:text="@string/interrogacao"
            app:layout_constraintBottom_toBottomOf="@+id/actENTRY_btCalcular_fbk"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.20"
            app:layout_constraintStart_toEndOf="@+id/actENTRY_btCalcular_fbk"
            app:layout_constraintTop_toTopOf="@+id/actENTRY_btCalcular_fbk" />

</androidx.constraintlayout.widget.ConstraintLayout>
