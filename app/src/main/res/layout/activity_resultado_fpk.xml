<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ResultadoFPK" android:orientation="vertical" android:gravity="center">
    
    <TextView
            android:text="Resultados"
            android:id="@+id/textView5"
            style="@style/FBK_FPK_Title" android:layout_width="match_parent" android:textStyle="bold"/>
    <TextView
            android:id="@+id/actResFPK_txvResultado"
            android:text="..."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:padding="32dp"
            android:background="@drawable/transparent_wood_box" android:layout_margin="16dp"
            android:textColor="@color/dark_wood"/>
    <ImageButton
            android:id="@+id/actResFPK_btShare"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_share_white_24dp"
            android:background="@drawable/fpk_share"/>
</LinearLayout>