<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    
    <!-- FBK / FPK Title's Style -->
    <style name="FBK_FPK_Title">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Display1</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">center</item>
        <item name="android:padding">16dp</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/white</item>
    </style>
    
    <!-- Description style -->
    <style name="FBK_FPK_description">
        <item name="android:textAlignment">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:padding">16dp</item>
    </style>
    
    <!-- Multiline EditText style -->
    <style name="entrada_fbk_fpk_dic">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:inputType">textMultiLine|textNoSuggestions|number</item>
        <item name="android:digits">1234567890,.;-\n</item>
        <item name="android:ems">12</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:hint">@string/fbk_example</item>
        <item name="android:lineSpacingExtra">6sp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:background">@drawable/bg__input_entrada_2</item>
        <item name="android:textColorHint">@color/darker_gray</item>
        <item name="android:fontFamily">@font/open_sans_light</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Description style -->
    <style name="DIC_description">
        <item name="android:textAlignment">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:padding">16dp</item>
    </style>

    <!-- Multiline EditText style -->
    <style name="DIC_edtxEntradas">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:inputType">textMultiLine|textNoSuggestions|number</item>
        <item name="android:digits">1234567890,.;-\n</item>
        <item name="android:ems">12</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:hint">@string/fbk_example</item>
        <item name="android:lineSpacingExtra">4sp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAlignment">textStart</item>
    </style>

    <style name="actRes__titulo_resultados">
        <item name="android:fontFamily">@font/open_sans_light</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="actRes__MPa">
        <item name="android:layout_weight">1</item>
        <item name="android:fontFamily">@font/open_sans_bold</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">0dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="actRes__valor_resultados">
        <item name="android:fontFamily">@font/open_sans_bold</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="actRes__layout_valores">
        <item name="android:layout_width">250dp</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:layout_margin">16dp</item>
        <item name="android:alpha">0.8</item>
        <item name="android:background">@drawable/square_orange</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="actRes__layout_valor_completo">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">-2dp</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="act_resultado_description">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">32dp</item>
        <item name="android:layout_marginTop">32dp</item>
        <item name="android:layout_marginEnd">32dp</item>
        <item name="android:layout_marginBottom">32dp</item>
        <item name="android:fontFamily">@font/open_sans_light</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Medium</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="act_resultado_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">32dp</item>
        <item name="android:layout_marginTop">32dp</item>
        <item name="android:layout_marginEnd">32dp</item>
        <item name="android:fontFamily">@font/open_sans_bold</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/gray3</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="primary_button">
        <item name="android:alpha">0.8</item>
        <item name="android:elevation">8dp</item>
        <item name="android:fontFamily">@font/open_sans_bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">28sp</item>
    </style>

    <style name="table_dic_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">#64B5F6</item>
        <item name="android:fontFamily">@font/open_sans_bold</item>
        <item name="android:foreground">@drawable/table_square_transparent_white</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="table_dic_header_light">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">#90CAF9</item>
        <item name="android:fontFamily">@font/open_sans_light</item>
        <item name="android:foreground">@drawable/table_square_transparent_white</item>
        <item name="android:padding">4dp</item>
        <item name="android:paddingStart">14dp</item>
        <item name="android:paddingEnd">14dp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="table_dic_header_dark">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">#64B5F6</item>
        <item name="android:fontFamily">@font/open_sans_light</item>
        <item name="android:foreground">@drawable/table_square_transparent_white</item>
        <item name="android:padding">4dp</item>
        <item name="android:paddingStart">14dp</item>
        <item name="android:paddingEnd">14dp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="table_dic_content_light">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">#90CAF9</item>
        <item name="android:fontFamily">@font/open_sans_bold</item>
        <item name="android:foreground">@drawable/table_square_transparent_white</item>
        <item name="android:padding">4dp</item>
        <item name="android:paddingStart">14dp</item>
        <item name="android:paddingEnd">14dp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="table_dic_content_dark">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">#64B5F6</item>
        <item name="android:fontFamily">@font/open_sans_bold</item>
        <item name="android:foreground">@drawable/table_square_transparent_white</item>
        <item name="android:padding">4dp</item>
        <item name="android:paddingStart">14dp</item>
        <item name="android:paddingEnd">14dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="dic_entrada_k_n_alfa">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/open_sans_light</item>
        <item name="android:padding">8dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="dic_entrada_valor_k_n_alfa">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ems">3</item>
        <item name="android:fontFamily">@font/open_sans_bold</item>
        <item name="android:inputType">numberSigned|number|numberDecimal</item>
        <item name="android:padding">8dp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="dic_entrada_layout">
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">120dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:alpha">0.8</item>
        <item name="android:background">@drawable/bg__input_entrada_2</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="entrada_exemplo" parent="Widget.AppCompat.Button.Colored">
        <item name="android:layout_width">65dp</item>
        <item name="android:layout_height">65dp</item>
        <item name="android:alpha">0.7</item>
        <item name="android:background">@drawable/circle_gray</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="image_background">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:alpha">0.3</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="dic_entrada_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:fontFamily">@font/open_sans_bold</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Large</item>
        <item name="android:textColor">#42A5F5</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="dic_entrada_subtitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:fontFamily">@font/open_sans_bold</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Large</item>
        <item name="android:textColor">#2196F3</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="dic_entrada_description">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:fontFamily">@font/open_sans_light</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Medium</item>
    </style>

    <style name="dic_entrada_layout_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
    </style>

    <style name="dic_entrada_bt_avancar">
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">65dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:alpha">0.8</item>
        <item name="android:background">@drawable/square_yellow</item>
        <item name="android:textSize">18sp</item>
    </style>


</resources>
